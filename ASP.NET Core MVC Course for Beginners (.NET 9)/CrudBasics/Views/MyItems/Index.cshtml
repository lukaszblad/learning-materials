@model List<CrudBasics.Models.MyItem>

@{
    ViewData["Title"] = "Index";
}

<h3>Index</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var myItem in Model)
        {
            <tr>
                <td>@myItem.Name</td>
                <td>@myItem.Price.ToString("N2")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@myItem.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@myItem.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
